extends layout

block content
  .row.justify-content-center
    .col-6.border.p-4
      h5.card-title Login
      if error_msg != ""
         p(style="color:red") #{error_msg}
      form(action="/login/", method="POST")
        div.form-group
          label(for="username") Username
          input#username.form-control(type="text", name="username", placeholder="Enter your username" required)
        div.form-group
          label(for="password") Password
          input#password.form-control(type="password", name="password", placeholder="Enter your password" required)
        .form-group.mt-4
          button.btn.btn-primary(type="submit" style="margin-right: 1em") Sign in
          a.btn.btn-primary(role="button", href="/", type="button") Cancel